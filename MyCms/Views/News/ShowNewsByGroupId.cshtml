@model IEnumerable<DataLayer.Page>
@{
    ViewBag.Title = "ShowNewsByGroupId";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/">News</a></li>
    <li class="breadcrumb-item">@ViewBag.name</li>
    
</ul>

<!-- last news -->
<section class="last-news-section border-radius">
    <header><i class="icons icon-doc-2"></i>  <h3>News Archive @ViewBag.name</h3> </header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="~/PageImages/@item.ImageName">
                <h2> <a href="/News/@item.OageId"> @item.Title </a></h2>
                <p>
                    @item.ShortDescription
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i>Date of Broadcast is @item.CreateDate.ToShortDateString() </span>
                <a href="/News/@item.OageId" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }
    </ul>
</section>
<!-- End last news -->

